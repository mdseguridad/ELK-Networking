PUT /_template/checkpoint-traffic-logs
{
  "index_patterns" : [
      "checkpoint-traffic-logs*"
   ],
  "settings" : {
     "index" : {
        "lifecycle" : {
          "name" : "CheckPointTraffic-ILM",
          "rollover_alias": "checkpoint-traffic-logs"
        },
        "refresh_interval" : "10s",
        "number_of_shards" : "3",
        "number_of_replicas" : "0"
		}
    },
     "mappings" : {
      "properties" : {
         "@timestamp" : {
           "type" : "date"
         },
         "event.original" : {
            "type" : "text",
            "fields" : {
              "keyword" : {
                "ignore_above" : 256,
                "index" : "false",
                "type" : "keyword"
            }
          }
         },
		  "cp.description" : {
            "type" : "text",
            "fields" : {
              "keyword" : {
                "ignore_above" : 256,
                "index" : "false",
                "type" : "keyword"
            }
          }
         },
		 "source.ip" : {
            "type" : "ip"
          },
		 "destination.ip" : {
            "type" : "ip"
          },
         "host.ip" : {
            "type" : "ip"
          },
		 "cp.src" : {
            "type" : "ip"
          },
		 "cp.dst" : {
            "type" : "ip"
          },		  
		 "cp.xlatesrc" : {
            "type" : "ip"
          },		  
		 "cp.xlatedst" : {
            "type" : "ip"
          },
	 "destination.geo": {
            "properties": {
               "location": {
                "type": "geo_point"
            }
          }
        },
	"source.geo": {
            "properties": {
               "location": {
                "type": "geo_point"
            }
          }
        }
        }
     },
     "aliases" : {
        "traffic-logs" : { }
    }
}
