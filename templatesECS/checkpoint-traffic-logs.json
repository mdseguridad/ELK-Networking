PUT /_template/checkpoint-traffic-logs
{
  "index_patterns" : [
      "checkpoint-traffic-logs*"
   ],
  "settings" : {
     "index" : {
        "lifecycle" : {
          "name" : "CheckPointTraffic-ILM",
          "rollover_alias": "checkpoint-traffic-logs"
        },
        "refresh_interval" : "10s",
        "number_of_shards" : "1",
        "number_of_replicas" : "0"
		}
    },
     "mappings" : {
      "properties" : {
         "@timestamp" : {
           "type" : "date"
         },
         "event.original" : {
            "type" : "text",
            "fields" : {
              "keyword" : {
                "ignore_above" : 256,
                "index" : "false",
                "type" : "keyword"
            }
          }
         }
        }
     },
     "aliases" : {
        "traffic-logs" : { }
    }
}
